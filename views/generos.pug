extends index
block contenido
    .mt-5.px-5
        h1.pt-5.pb-3.text-center Generos

        if (showSuccess)
            .alert.alert-success(role='alert') #{alertMsg}
        else if (showDanger)
            .alert.alert-danger(role='alert') #{alertMsg}
        else if (showWarning)
            .alert.alert-warning(role='alert') #{alertMsg}

        .d-flex.gap-4
                .col-5
                    form.border.p-3.rounded-4(method='post')
                        .mb-3
                            label.fw-bold(for='genero', class='form-label') Genero:
                            input(type='text', class='form-control', id='genero' name='genero' value=generoEdit.genero)
                        .d-flex.gap-2
                            button.btn.btn-primary(type='submit') Submit
                            if (showDelete)
                                a.btn.btn-danger(href=`/generos/delete/${generoEdit.genero_id}`) Eliminar
                            if (edit)
                                a.btn.border-1.border-black(href='/generos') Cancelar

                table.table.table-striped
                    thead.table-dark
                        tr
                            th.col-1(scope='col') #
                            th.col-9(scope='col') Genero
                            th.col-1(scope='col')
                    tbody.table-group-divider
                        each genero in generos
                            tr
                                th.col-1(scope='row') #{genero.genero_id}
                                td.col-9 #{genero.genero}
                                td.col-1.text-center
                                    a.btn.btn-warning.btn-sm(href=`/generos/${genero.genero_id}`) Editar